<node>
  <!--
      org.slashdirt.rwchcd.Control:
      @short_description: Simple control interface for rwchcd
  -->
  <interface name="org.slashdirt.rwchcd.Control">
    <!--
        SysmodeSet:
        @Sysmode: desired running mode: 0 = OFF, 1 = AUTO, 2 = COMFORT, 3 = ECO, 4 = FROSTFREE, 5 = DHWONLY, 6 = TEST

	Sets system mode for rwchcd.
    -->
    <method name="SysmodeSet">
      <arg name="Sysmode" direction="in" type="y"/>
    </method>
    <!--
        SysmodeGet:
        @CurSysmode: current sysmode mode

	Gets current system mode for rwchcd.
    -->
    <method name="SysmodeGet">
      <arg name="CurSysmode" direction="out" type="y"/>
    </method>
    <!--
     ToutdoorGet:
     @CurToutdoor: current outdoor temperature
     
     Gets current outdoor temperature in celsius
     -->
    <method name="ToutdoorGet">
	    <arg name="CurToutdoor" direction="out" type="d"/>
    </method>
    <!--
     ConfigTempModeGet:
     @Runmode: target runmode: 2 = COMFORT, 3 = ECO, 4 = FROSTFREE
     @CurTemp: current config ambient target temperature
     -->
    <method name="ConfigTempModeGet">
	    <arg name="Runmode" direction="in" type="y"/>
	    <arg name="CurTemp" direction="out" type="d"/>
    </method>
    <!--
     ConfigTempModeSet:
     @Runmode: target runmode: 2 = COMFORT, 3 = ECO, 4 = FROSTFREE
     @NewTemp: desired config ambient target temperature
     -->
    <method name="ConfigTempModeSet">
	    <arg name="Runmode" direction="in" type="y"/>
	    <arg name="NewTemp" direction="in" type="d"/>
    </method>
    <!--
     ConfigOuthoffModeGet:
     @Runmode: target runmode: 2 = COMFORT, 3 = ECO, 4 = FROSTFREE
     @CurTemp: current config outdoor temperature for no heating
     -->
    <method name="ConfigOuthoffModeGet">
	    <arg name="Runmode" direction="in" type="y"/>
	    <arg name="CurTemp" direction="out" type="d"/>
    </method>
    <!--
     ConfigOuthoffModeSet:
     @Runmode: target runmode: 2 = COMFORT, 3 = ECO, 4 = FROSTFREE
     @NewTemp: desired config outdoor temperature for no heating
     -->
    <method name="ConfigOuthoffModeSet">
	    <arg name="Runmode" direction="in" type="y"/>
	    <arg name="NewTemp" direction="in" type="d"/>
    </method>
  </interface>
</node>
